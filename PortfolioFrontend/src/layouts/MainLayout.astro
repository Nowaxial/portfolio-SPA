---

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content="Professional Portfolio of Maria Toledo Silva, a System Developer specializing in .NET and modern web architectures." />
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400..900;1,400..900&family=Space+Grotesk:wght@300..700&family=JetBrains+Mono:wght@400;700&display=swap" rel="stylesheet">
		<link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/devicon.min.css" />
	</head>
	<body>
		<div class="app-container">
			<slot />
		</div>
	</body>
</html>

<style is:global>
	:root {
		--brand-accent: #fca311;
		--card-bg: rgba(20, 33, 61, 0.7);
	}

	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		background-color: var(--mantine-color-body);
		color: var(--mantine-color-text);
		font-family: 'Space Grotesk', sans-serif;
		transition: background-color 0.3s ease;
		overflow-x: hidden;
	}

	.app-container {
		min-height: 100vh;
		background-image: 
			radial-gradient(circle at 2px 2px, var(--mantine-color-default-border) 1px, transparent 0);
		background-size: 40px 40px;
	}

	h1, h2, h3, h4, h5, h6 {
		font-weight: 800;
		letter-spacing: -0.02em;
	}

	::selection {
		background: var(--brand-accent);
		color: #000;
	}
</style>

